<section class='vh-100'>
  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Registrate</p>
  <div class='row m-5 px-5'>
    <!--Este es el formulario-->
    <div class='col-6'>
      <form action="/singin" method="POST">

        <div class="form-group my-4">
          <label for="name">Ingrese nombre</label>
          <input id="name" name="user" type="text" class="form-control" placeholder="Ingrese su nombre">
        </div>

        <div class='form-group my-4'>
          <label for="apodo">Ingrese sobrenombre</label>
          <input id="apodo" name="sobrenombre" type="text" class="form-control" placeholder="Alias para la pagina">
          <small class='form-text text-muted'>Este campo no es obligatorio</small>
        </div>

        <div class='form-group my-4'>
          <label for="correo">Ingrese correo</label>
          <input id="correo" name="email" type="text" class="form-control" placeholder="Ingrese su correo">
        </div>

        <div class='form-group my-4'>
          <label for="pass">Contraseña</label>
          <input id="pass" name="password" type="password" class="form-control" placeholder="Ingrese una contraseña">
        </div>

        <button class='btn btn-primary' type="submit">Enviar</button>
        <button class='btn btn-success' type="reset">Limpiar</button>
      </form>
    </div>
    <!--Esta es la imagen al lado del formulario-->
    <div class='col-6 px-0'>
      <img
        src='https://image.freepik.com/vector-gratis/ilustracion-concepto-abstracto-pagina-inicio-sesion_335657-3875.jpg'
        class='img-responsive'>
    </div>

  </div>
</section>