
<section class='vh-100'>
  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Inicia Sesion</p>
  <div class='row mx-5 px-5'>
    <!--Este es el formulario-->
    <div class='col-6'>
      <form action="/login" method="POST">

        <div class="form-group my-4">
          <label for="name">Correo</label>
          <input id="name" name="email" type="text" class="form-control" placeholder="Ingrese su correo">
        </div>

        <div class='form-group my-4'>
          <label for="pass">Contraseña</label>
          <input id="pass" name="password" type="password" class="form-control" placeholder="Ingrese su contraseña">
        </div>

        <button class='btn btn-primary' type="submit">Enviar</button>
        <button class='btn btn-success' type="reset">Limpiar</button>
      </form>
    </div>
    <!--Esta es la imagen al lado del formulario-->
    <div class='col-6 px-0 mx-0'>
      <img
        src='https://mdbootstrap.com/img/Photos/new-templates/bootstrap-login-form/draw2.png'
        class='img-responsive'>
    </div>

  </div>
</section>