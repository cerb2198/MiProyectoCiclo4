<div class='row p-5'>
    {{#each userFavoritos}}
    <div class='col-4'>
        <div class='card'>
            <div class='card-body'>
                <div class="embed-responsive embed-responsive-16by9">
                    <img class="card-img-top embed-responsive-item" src="{{imagenURL}}" />
                </div>
                <p>Ubicacion: {{ubicacion}}</p>
                <p>Precio: {{precio}}</p>
                <p>Numero de habitaciones: {{habitaciones}}</p>
                <p>Tipo apto: {{tipoApto}}</p>
                <p>Antiguedad: {{antiguedad}} meses</p>
            </div>
            <div class='card-footer'>
                <form action='/perfil/remueveFavoritos' method='POST'>
                    <input type="hidden" class='btn-form' name='inmuebleId' value='{{_id}}'>
                    <button class='btn btn-success'>Eliminar de favoritos</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>